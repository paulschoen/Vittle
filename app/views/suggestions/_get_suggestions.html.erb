<div id="suggestion-container" class="suggestion-container">

    <%= form_tag(home_index_path,:class => "input-group", :method => "get") do %>
    <%=  text_field_tag(:origin, nil, placeholder: 'Type in a city!', class: 'form-control col-xs-9') %>
    <span class="input-group-btn"><%= submit_tag("Go!", class: "btn") %></span>
    <% end %>
    <% if @location_suggestions == nil %>
    <%= image_tag("lilguy.gif", :class => "lilguy") %>
<% else %>
    <% @location_suggestions.each do |suggestion| %>
    <% yelp_response = suggestion.call_yelp %>
    <div class="panel panel-default">
        <div class="panel-head">
            <h3><%= suggestion.users_name %></h3>
            <h4 class="users_city">
                <%= suggestion.users_city %></h4>
            <p>
                <%= suggestion.body %>
            </p>
            <a data-toggle="collapse" href="#collapse-<%= yelp_response['id'] %>">
                <span class="glyphicon glyphicon-chevron-down text-center"></span>
            </a>
          <div id="collapse-<%= yelp_response['id'] %>" class="panel-collapse collapse">
            <div class="panel-body">
                  <h3>
                      <%= yelp_response["name"] %>
                  </h3>
            </div>
          </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>
