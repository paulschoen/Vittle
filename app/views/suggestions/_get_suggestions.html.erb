<div id="suggestion-container" class="suggestion-container">

<%= form_for(home_index_path,:class => "input-group", :method => "get") do %>
  <%=  text_field_tag(:origin, nil, placeholder: 'Type in a city!', class: 'form-control col-xs-9') %>
  <span class="input-group-btn"><%= submit_tag("Go!", class: "btn") %></span>
<% end %>
  <% if @location_suggestions == nil %>
    <%= image_tag("lilguy.gif", :class => "lilguy") %>
  <% else %>
      <% @location_suggestions.each do |suggestion| %>
      <div class="panel panel-default">
          <div class="panel-head">
            <p>
              <%= suggestion.users_name %> said you gotta try this taco!
            </p>
              <div class="panel-body">
                <div class="panel-footer">
                  <li>
                      <%= suggestion.call_yelp %><br/>
                  </li>
                </div>
            </div>
          </div>
      </div>
  <% end %>
<% end %>
</div>
