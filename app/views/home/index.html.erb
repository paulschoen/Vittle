                                      <div class="text-right">
                                          <a class="text-right" href="tel:+<%= yelp_response['phone'] %>">
                                            <h3><%= yelp_response['display_phone'] %> </h3>
                                          </a>
                                      </div>
                                      <div class="rest-info text-right">
                                          <a class="rest-info text-right" href="<%= yelp_response["mobile_url"] %>">
                                              <h3>Yelp Link   <i class="fa fa-yelp" aria-hidden="true"></i></h3>
                                          </a>
                                      </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            </div>
                          </div>
                          <div>
                            <br />
                          </div>
                          <div class="panel panel-default rest-panel">
                              <div class="panel-body">
                                <div class="google-map center-block">
                                    <a href="https://www.google.com/maps/dir//<%= suggestion.latitude %>,+<%= suggestion.longitude %>/">
                                        <img
                                            class="rounded img-responsive"
                                            src="http://maps.googleapis.com/maps/api/staticmap?center=<%= suggestion.latitude %>,+<%= suggestion.longitude %>&zoom=17&scale=false&size=300x300&maptype=roadmap&format=png&visual_refresh=true&markers=icon:http://i.imgur.com/svyFpfv.png%7Cshadow:true%7C25.7650461623728,+-80.2514094779099"
                                            alt="Google Map of 25.7650461623728, -80.2514094779099">
                                        <div class="row">
                                            <div class="col-xs-10">
                                                <li class="address">
                                                    <% yelp_response["location"]["display_address"].each do |line| %>
                                                    <%= line %>
                                                    <% end %>
                                                </li>
                                            </div>
                                            <div class="col-xs-1 text-center">
                                                <span class="glyphicon glyphicon-chevron-right"></span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                              </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>

