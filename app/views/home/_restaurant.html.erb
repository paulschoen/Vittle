<div class="restaurant-container">

    <%= form_tag(home_index_path,:class => "input-group", :method => "get") do %>
    <%=  text_field_tag(:city, nil, placeholder: 'Type in a city!', class: 'form-control col-xs-9') %>
    <span class="input-group-btn"><%= submit_tag("Go!", class: "btn") %></span>

    <% end %>
    <% if @businesses == nil %>
    <%= image_tag("lilguy.png", :class => "lilguy") %>
<% else %>
    <% @businesses.each_with_index do |business, index| %>
    <a data-toggle="modal" data-target="#my<%= business["id"] %>">
    <div class="panel panel-default">
        <div class="panel-head">
            <% if business["name"] == nil %>
            <% redirect root_path %>
        <% else %>
            <h3 class="text-center panel-head" id="business-name-<%= index %>"><%= business["name"] %></h3>
            <% end %></a>
            <div class="panel-body">
                <div class="row">
                    <% if business["image_url"] == nil %>
                    <% image_tag "https://www.royalcanin.com/~/media/Royal-Canin/Product-Categories/cat-breed-landing-hero.ashx"%>
                <% else %>
                    <%= image_tag business["image_url"], class: "rounded col-xs-5" %>
                    <% if business["location"]["display_address"] == nil %>
                    <h6>No address provided</h6>
                <% else %>
                    <a class="text-right col-xs-7" href="http://maps.google.com/?q=<%= business["location"]["display_address"].join(" ") %>">
                        <% business["location"]["display_address"].each do |line| %>
                        <p>
                            <%= line %>
                        </p>
                        <% end %></a>
                    <% end %>
                </div>
                <h6 class="text-right">
                    <%= business["categories"].first.first %>
                </h6>
                <% end %>
            </div>
            <button type="button" data-toggle="modal" data-target="#suggest<%= business["id"] %>">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
        </div>

    </div>
    <!-- <div class="modal fade" id="my<%= business["id"] %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div> -->
    <div class="modal fade suggestion-modal" id="suggest<%= business["id"] %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                  <%= render "suggestion", suggestion: @suggestion, business: business %>
                </div>
                <!-- <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div> -->
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>
