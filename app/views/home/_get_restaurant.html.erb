<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDLw4xkUKLlg33oczbiRij2CG8iaWmp_8E&callback=initMap">
    </script>
<div id="restaurant-container" class="restaurant-container">

    <%= form_tag(home_index_path,:class => "input-group", :method => "get") do %>
    <%=  text_field_tag(:city, nil, placeholder: 'Type in a city!', class: 'form-control col-xs-9') %>
    <span class="input-group-btn"><%= submit_tag("Go!", class: "btn") %></span>

    <% end %>
    <% if @businesses == nil %>
    <%= image_tag("lilguy.gif", :class => "lilguy") %>
<% else %>
    <!-- This is the loop for the API call -->
    <% @businesses.each_with_index do |business, index| %>
    <% @sugs = Suggestion.yelp_id_match(business["id"]) %>
    <!-- This is the loop to match the suggestions with yelp id -->
    <a data-toggle="modal" data-target="#my<%= business[" id"] %>">
        <div class="panel panel-default">
            <div class="panel-head">
                <% if business["name"] == nil %>
                <% redirect root_path %>
            <% else %>
                <h3 class="text-center panel-head" id="business-name-<%= index %>"><%= business["name"] %></h3>
                <% end %></a>
            <div class="container">
                <div class="row">
                    <% if business["image_url"] == nil %>
                    <% image_tag "https://www.royalcanin.com/~/media/Royal-Canin/Product-Categories/cat-breed-landing-hero.ashx"%>
                <% else %>
                    <%= image_tag business["image_url"], class: "rounded col-xs-5 item" %>
                    <% if business["location"]["display_address"] == nil %>
                    <h6>No address provided</h6>
                <% else %>
                    <a class="text-right col-xs-6 item" href="http://maps.google.com/?q=<%= business['location']['display_address'].join(" ") %>">
                        <% business["location"]["display_address"].each do |line| %>
                        <p>
                            <%= line %>
                        </p>
                        <% end %></a>
                    <% end %>
                </div>
            </div>
            <h6 class="text-right">
                <%= business["categories"].first.first %>
            </h6>
            <% end %>
            <button type="button" data-toggle="modal" data-target="#suggest<%= business['id'] %>">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
            <a id="dropdown" data-toggle="collapse" href="#collapse-<%= business['id'] %>">
                <span class="glyphicon glyphicon-chevron-down text-center"></span>
            </a>
            <span><%= @sugs.count %></span>
            <div id="collapse-<%= business['id'] %>" class="panel-collapse collapse">
                <div class="panel-body">
                    <div class="more-rest-info">
                        <!-- Google Maps -->
                        <a href="https://www.google.com/maps/dir//<%= business['location']['coordinate']['latitude'] %>,+<%= business['location']['coordinate']['longitude'] %>/"><img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= business['location']['coordinate']['latitude'] %>,+<%= business['location']['coordinate']['longitude'] %>&zoom=9&scale=false&size=300x300&maptype=roadmap&format=png&visual_refresh=true&markers=icon:http://i.imgur.com/svyFpfv.png%7Cshadow:true%7C25.7650461623728,+-80.2514094779099" alt="Google Map of 25.7650461623728, -80.2514094779099"></a>
                        <!-- Google Maps -->
                    </div>
                    <% @sugs.each do |sug| %>
                    <div class="panel panel-default">
                        <div class="panel-head">
                            <h3 id="sug-user-name"><%= sug.users_name %></h3>
                            <h4 id="sig-users-city">
                                From:<br />
                                <%= sug.users_city %></h4>
                            <p id="sug-menu-item">
                                Recommends:<br />
                                <%= sug.menu_item %>
                            </p>
                            <p id="sug-body">
                                Heres more he has to say:
                                <br/>
                                <%= sug.body %>
                            </p>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade suggestion-modal" id="suggest<%= business['id'] %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <%= render "suggestion", suggestion: @suggestion, business: business %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>
